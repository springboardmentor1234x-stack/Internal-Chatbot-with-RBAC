[flake8]
max-line-length = 88
extend-ignore = 
    # Ignore line too long (handled by black)
    E501,
    # Ignore whitespace issues (handled by black)
    W291, W293,
    # Ignore import not at top (some files need conditional imports)
    E402,
    # Ignore unused imports in utility files
    F401,
    # Ignore unused variables in some contexts
    F841,
    # Ignore bare except (some are intentional for broad error handling)
    E722
exclude = 
    __pycache__,
    .git,
    .venv,
    venv,
    .pytest_cache,
    *.egg-info,
    build,
    dist
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow longer lines in data files
    */marketing_report*.py:E501
    */vector_db*.py:E501